<div style="height: 330px; background: #ffffff;">
    <div style="margin: 9px 9px; border: 1px solid green; width: 400px; float: left;">
        <form action="./users/login" method="post">
            <table class="table">
                <tr>
                    <td colspan="2" align="center">登录</td>
                </tr>
                <tbody>
                    <tr>
                        <td align="right">email:</td>
                        <td><input type="text" name="email" class="form-control" placeholder="请输入邮箱"></td>
                    </tr>
                    <tr>
                        <td align="right">密码:</td>
                        <td><input type="password" name="pwd" class="form-control" placeholder="请输入密码"></td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center" valign="middle">
                            <input type="submit" value="登录" class="btn btn-success" />
                        </td>
                    </tr>
                    <input type="hidden" name="subflag" value="1">
                </tbody>
            </table>
        </form>
    </div>
    <div style="margin: 9px 9px; border: 1px solid green; width: 400px; float: left;">
        <form action="./users/register" method="post">
            <table class="table">
                <tr>
                    <td colspan="2" align="center">注册</td>
                </tr>
                <tbody>
                    <tr>
                        <td align="right">email:</td>
                        <td><input type="text" name="email" class="form-control" placeholder="请输入邮箱"></td>
                    </tr>
                    <tr>
                        <td align="right">密码:</td>
                        <td><input type="password" name="pwd" class="form-control" placeholder="请输入密码"></td>
                    </tr>
                    <tr>
                        <td align="right">确认密码:</td>
                        <td><input type="password" name="re_pwd" class="form-control" placeholder="请再次输入密码"></td>
                    </tr>
                    <tr>
                        <td align="right">昵称:</td>
                        <td><input type="text" name="nickname" class="form-control" placeholder="请再次输入密码"></td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center" valign="middle">
                            <input type="submit" value="注册" class="btn btn-success" />
                        </td>
                    </tr>
                    <input type="hidden" name="subflag" value="1">
                </tbody>
            </table>

        </form>

    </div>

</div>